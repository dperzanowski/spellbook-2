%div.button-group
  = link_to 'New Character', new_character_path, :class => 'btn btn-default btn-xs'
  - if params['action'] != 'index'
    = link_to "Edit Character", edit_character_path(character), :class => 'btn btn-default btn-xs' if !character.nil? && !character.id.nil?
    = link_to "Delete Character", character_path(character), :class => 'btn btn-danger btn-xs', :method => :delete if !character.nil? && !character.id.nil?
